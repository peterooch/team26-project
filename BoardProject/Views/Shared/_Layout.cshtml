@inject Localizer locale
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <!-- Don't delete the link of css MIStyle this is set the page!! -->
    <link rel="stylesheet" href="~/css/MIStyle.css" />
    <script src="~/js/jscolor.js" asp-append-version="true"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @if (ViewData["CustomStyle"] != null)
    {
        <link rel="stylesheet" href="@ViewData["CustomStyle"]">
    }
</head>
<body style="@("text-align: " + locale["align"] + "!important;" + ViewData["AdditionalStyle"] ?? "")" dir="@locale["dir"]"  id="page_body" >
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
